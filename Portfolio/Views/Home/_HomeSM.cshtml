@model List<Portfolio.Models.SmModels>


@if (Model.Count() != 0)
{
    int i = 0;
    int x = 6 - Model.Count();
    <hr />
    <div class="row text-center">
        @foreach (var item in Model)
        {
            if (i == 0)
            {
                <div class="col-sm-2 col-sm-offset-@x">
                    <a href="@item.url" target="_blank" style="text-decoration: none; color: darkgray">

                        <!--@item.Name-->
                        <span class="@item.symbol" style="font-size:5em"></span>
                    </a>
                </div>
            }
            else
            {
                <div class="col-sm-2">
                    <a href="@item.url" target="_blank" style="text-decoration: none; color: darkgray">

                        <!--@item.Name-->
                        <span class="@item.symbol" style="font-size:5em"></span>
                    </a>
                </div>
            }
            i++;
            i = i % 6;
        }
    </div>
}