@model List<Portfolio.Models.BlogPostModels>
@{
    ViewBag.Title = "Contact";
    int i = 0;
}

<div class="container" style="margin-top:2%">

    <div class="row">
        <div class="col-md-8" style="text-align:justify;">

            @foreach (var item in Model)
            {
                if (i == 0)
                {
                    i++;
                }
                else
                {
                    <hr />
                }
                @Html.Partial("_Post", item);
            }

        </div>
        <div class="col-md-4" style="border-left: 1px solid rgba(174,233,0,1); height:100%;" >
            <h1> Jakies nieciekawe info</h1>
            <div class="container ">
                <!-- content right bar-->
            </div>
        </div>
    </div>

</div>

