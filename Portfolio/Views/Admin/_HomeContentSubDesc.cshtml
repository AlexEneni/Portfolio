
<div class=" row">
    @for (int i = 1; i <= 3; i++)
    {

        <div class="col-md-4">

            <h2>Opis Czesciowy @i: </h2>
            @using (Html.BeginForm("HomeContentSubDesc", "Admin", new { id = i }, FormMethod.Post))
            {
                try
                {
                    using (StreamReader sr = new StreamReader(Server.MapPath($"~/Resources/subDesc{i}.txt")))
                    {
                        HtmlString line = new HtmlString(sr.ReadToEnd());
                        var result = line.ToString();
                        <div class="form-group">
                            <textarea type="text" rows="5" style="width:100%" name="subdesc" class="form-control">@result</textarea>
                        </div>
                        <button type="submit" class="btn btn-default">Zapisz</button>
                    }

                }
                catch
                {
                    <span class="label-danger label"> Brak pliku </span>
                }
            }
        </div>
    }
</div>