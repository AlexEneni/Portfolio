@model IEnumerable<Portfolio.Models.Message>

@{
    ViewBag.Title = "MessageList";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}

<h2>MessageList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.userName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.eMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateOfSend)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.wasDisplayed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.userName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.eMail)
        </td>
        <td>
            @item.dateOfSend.ToShortDateString()
        </td>
        <td>
            @if (item.wasDisplayed)
            {
                <span class="label label-success"> Yes </span>
            }
            else
            {
                <span class="label label-danger"> No </span>
            }
        </td>
        <td>
            <a href="@Url.Action("MessageList", "Admin", new { id=item.ID })" role="button" class="btn btn-default"> View </a>
            <a href="@Url.Action("MessageDelete", "Admin", new { id=item.ID })" role="button" class="btn btn-danger"> Delete </a>
        </td>
    </tr>
}

</table>
