<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/icon/icon.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @{ 
        string var;
    }
    @try
    {
        using (StreamReader sr = new StreamReader(Server.MapPath("~/Resources/name.txt")))
        {
            HtmlString line = new HtmlString(sr.ReadToEnd());
            var = line.ToString();
        }

    }
    catch
    {
        var = "Brak pliku";
    }
    <div class="row">
        <div class="col-md-12">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink(var, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Galery", "Index", "Galery")</li>
                            <li>@Html.ActionLink("Contact", "Index", "Contact")</li>
                            <li>@Html.ActionLink("Blog", "Index", "Blog")</li>
                        </ul>

                        <!-- @Html.Partial("_LoginPartial") -->
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="container body-content">

        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Eneni's Studio Portfolio</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
